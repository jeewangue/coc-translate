{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "es2018"],
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
